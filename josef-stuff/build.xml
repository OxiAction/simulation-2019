<project name="Simulation" default="run" basedir=".">
  <path id="classpath">
    <pathelement location="${basedir}"/>
    <pathelement location="${basedir}/desmoj-2.5.1e-bin.jar"/>
  </path>

  <target name="compile">
    <javac srcdir="${basedir}" destdir="${basedir}">
      <classpath refid="classpath"/>
    </javac>
  </target>
  
  <target name="run" depends="compile">
    <java classname="FriseurModell">
      <classpath refid="classpath"/>
      <arg value="1234"/>
      <arg value="3"/>
      <arg value="1200"/>
      <arg value="1500"/>
      <arg value="2100"/>
      <arg value="false"/>
      <arg value="28800"/>
    </java>
  </target>
  
  <target name="clean">
    <delete>
      <fileset dir="." includes="*.class,*.html"/>
    </delete>
  </target>
</project> 
